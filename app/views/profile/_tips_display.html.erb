<div class="tip-display">
<%= image_tag @user.user_header, :width => "600", height: "242" %>
<div class="tip-iiner">
    <ul class="left">
        <li><p><%= @user.posts.size %><span>TIPS</span></p></li>
        <li><p><%= @user.following.collect(&:user_id).uniq.size %><span>ACQUAINTING</span></p></li>
        <li><p><%= @user.followers.collect(&:follower_id).uniq.size %><span>ACQUAINTANCES</span></p></li>
    </ul><!-- ul -->
    <div class="tip-buttons right" style="margin-top: 20px;">
    <!--
    <input type="text" value="Message" class="button">
    <input type="text" value="Edit Account" class="button">
    -->
    <% if @current_user == @user %>

    <a href="<%= root_url%><%= @current_user.username %>/edit" class="button">Edit my Profile</a>
    <% else %>
    
    <!-- <a href="/messages/new?receiver_id=<%= @user.id %>&receiver_name=<%= @user.name %>" class="button">Message</a> -->
    <% if unblock_user_detail(@user,@curent_user)==true %>
    <%if !@current_user.followers.blank?%>
        <% if @current_user.followers.collect(&:follower_id).include? @user.id %>
        <a href="#message_form" class="button fancybox">Message</a>
        <a href="/<%= @current_user.username %>/lists?user_id=<%= @user.id %>" class="button">Add to list</a>
    <% end %>
    <% end %>
    <% end %>
    <% end %>
    </div>
    <div class="clear"></div>
</div>
</div>

<script type="text/javascript">
$(document).ready(function() {
 

  $('.fancybox').fancybox();
  });
</script>