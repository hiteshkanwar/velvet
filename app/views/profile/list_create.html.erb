<div class="page">
    <div class="container">
        <div class="left-section left">

            <%= render :partial => '/sidebar/profile' %>
           
            <!-- nav --> 
            <%= render :partial => '/sidebar/nav' %>

            <!-- suggest -->
            <%= render :partial => '/sidebar/suggest' %>
            
            <!-- trends -->
            <%= render :partial => '/sidebar/trends' %>

            <!-- trends -->
            <%= render :partial => '/sidebar/copy' %>
            <br/>
            <div class="banner"><%= image_tag "main/isotok.png" %></div>
        </div>

        <div class="right-section right">

            
            <%= render :partial => 'tips_display' %>
            
            <div class="heading all-heading">Create List</div>

            <br/>

            <!-- START POST -->
            <div class="tip-holder">
                <div class="box list border-radius">
                    <form action="/<%= @current_user.username %>/create_list" method="post">
                    <input name="authenticity_token" type="hidden" value= "<%= form_authenticity_token %>" />
                    <div class="label-holder">
                    <label class="label">List name</label>
                    <p><input style="width: 635px" name="list[name]" type="input" value=""></p>
                    <div class="clear"></div>
                    </div>

                    <div class="label-holder">
                    <label class="label">Description</label>
                    <p><textarea name="list[description]" style="width: 635px" rows="6"></textarea></p>
                    <div class="clear"></div>
                    </div>

                    <div class="label-holder">
                    <!--
                    <label class="label">privacy</label>
                    <p><input type="checkbox"> Public <span>Anyone can follow this list</span></p>
                    <p><input type="checkbox"> Private <span>Only you can access this list</span></p>
                    -->
                    <div class="clear"></div>
                    </div>
        
                    <input type="submit" class="button save" value="Save List">
                    </form>
                </div><!-- .box -->
            </div>
            <!-- END POST -->

        </div>
        <div class="clear"></div>
    </div><!-- .container -->
</div>
