<script>
$( document ).ready(function() {
  // Handler for .ready() called.
  $('#tip').val("")
  $("#tip").focusin(function(){
    $("#comment").slideDown(800);
      if ( $('#tip').val()==""){
      $("#tip_submit").removeClass("button");
      $("#tip_submit").addClass("disable_button");
    }
    $("#tip").keyup(function(){
      if ( $('#tip').val()==""){
        $("#tip_submit").attr("disabled", true);
        $("#tip_submit").removeClass("button");
        $("#tip_submit").addClass("disable_button");
      }
      else{
        $("#tip_submit").removeClass("disable_button");
        $("#tip_submit").addClass("button");
        $("#tip_submit").attr("disabled", false); 
      }   
    });
  });
  $("#tip").focusout(function(){
      if ( $('#tip').val()=="")
      {
        $("#comment").slideUp(800);
      }
  });
});
</script>

<style>

.disable_button {
    
    border: medium none;
    border-radius: 3px 3px 3px 3px;
    color: #FFFFFF;
