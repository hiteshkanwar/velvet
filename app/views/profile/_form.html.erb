<div class="clear"></div>
<div class="reply-tip">

	<form action="/post/comment" name="reply" method="post" data-remote="true">
		<%= image_tag @current_user.user_avatar, :width => "47" %>
		<input type="text" name="body" id="tip_comment_reply" value="Write a Reply" onfocus="if (this.value == 'Write a Reply') {this.value = '';}" onblur="if (this.value == '') {this.value = 'Write a Tip';}">
		<input name="authenticity_token" type="hidden" value= "<%= form_authenticity_token %>" />
		<input name="id" type="hidden" value= "<%= post.id %>" />
		<input  style="width: 12%; float: right; margin-top: 9px; margin-right: 7px;" type="submit" value="Reply" class="button" >
	</form>
</div>