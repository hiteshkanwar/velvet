<div class="clear"></div>
<div class="reply-tip">

	<form action="/post/comment" name="reply" method="post" data-remote="true">
		<%= image_tag @current_user.user_avatar, :width => "47" %>
		<input type="text" name="body" id="text_<%=post.id%>" value="Write a Reply" onfocus="if (this.value == 'Write a Reply') {this.value = '';}" onblur="if (this.value == '') {this.value = 'Write a Tip';}">
		<input name="authenticity_token" type="hidden" value= "<%= form_authenticity_token %>" />
		<input name="id" type="hidden" value= "<%= post.id %>" />
		<div id="images_preview_<%=post.id%>"></div>
		<a id="various6" href="/dashboard/emoji_modal"><img src="../assets/comment_add.png" id="fumugi_<%=post.id%>" style="width: 42px;"></a> 

		<input  style="width: 12%; float: right; margin-top: 9px; margin-right: 7px;" type="submit" value="Reply" class="button" >
	</form>
</div>



<script>

$(document).on("click", "#text_<%=post.id%>", function(event){
  if (localStorage.funmoji != 'null' && localStorage.funmoji != undefined) {
	var text_post = $('#text').val();
    var text = $('#text_<%=post.id%>').val();
    var code = localStorage.funmoji;
    $.ajax({
      type: "POST",
       url: '/post/funmoji_post?post_data='+text+' '+code,
       data:  {post_id: "<%=post.id%>"} 
     });
    $("#text_<%=post.id%>").val(text+' '+code)
    $("#text").val(text+' '+code)
    localStorage.funmoji = 'null'

  }


});
</script>