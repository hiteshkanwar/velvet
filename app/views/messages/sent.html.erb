<div class="page"> 
  <div class="container">
    <div class="left-section left">
      <%= render :partial=>"message_nav" %>
    </div>  
    <div class="right-section right">
      <div class="heading border-radius">Sent</div>
      <div class="inbox message border-radius">
        <% @messages.each do |message| %>

        <div class="message-holder"  id="message_<%=message.id %>">
          <%= image_tag message.receiver.user_avatar, :width => "47"%>
          <%#= image_tag "inbox-img.jpg" ,:width=>47%>
          <div class="description">
            <h2><%= message.receiver.name %></h2>
            <p> 
             
              <%= message.message_text %> </p>

            <!-- <a href="#">Forward</a> --> 
              <% if message.attachments.present? %>
                <p style="height:125px">
                  <a href="<%=message.attachments.first.document_url %>" class="fancy-popup"><%= image_tag message.attachments.first.document.url(:thumb), :width => "120"%>  
                  </a>  
                </p>
              <% end %>  
              <%= link_to "Delete", message_path(message),:method=>"delete",:confirm=>"Are you sure?" %>
          </div>
          <div class="clear"></div>
        </div><!-- .message-holder -->
        <% end %>  
      </div><!-- .inbox -->
    </div><!-- .right-section -->
    <div class="clear"></div>
  </div><!-- .container -->
</div>

<script type="text/javascript">
$(document).ready(function(){
  VL.message.initFancyBox()
})
</script>


