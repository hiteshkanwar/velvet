<div class="page"> 
  <div class="container">
    <div class="left-section left">
      <%= render :partial=>"message_nav" %>
    </div>  
    <div class="right-section right">
      <div class="heading border-radius">Trash</div>
      <div class="inbox message border-radius">
        <% @messages.each do |message| %>

        <div class="message-holder"  id="message_<%=message.id %>">
          <%= image_tag message.sender.user_avatar, :width => "47"%>
          
          <%#= image_tag "inbox-img.jpg" ,:width=>47%>
          <div class="description">
            <h2><%= message.sender.name %></h2>
            <p><%= message.message_text %> </p>
             <%= link_to "Undelete", undelete_message_path(message) %>
            <%= link_to "Delete permanently", message_path(message),:method=>"delete",:confirm=>"Are you sure?" %>
          </div>
          <div class="clear"></div>
        </div><!-- .message-holder -->
        <% end %>  
      </div><!-- .inbox -->
    </div><!-- .right-section -->
    <div class="clear"></div>
  </div><!-- .container -->
</div>






 