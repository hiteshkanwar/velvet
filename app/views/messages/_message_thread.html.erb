<%if @messages.blank?%>

<%= render :partial=>"message",:locals=>{:message=>message} %>
<!-- .message-holder -->

<% message.descendants.each do |sub_message|%>
  <%= render :partial=>"message" ,:locals=>{:message=>sub_message }%>
<% end %>
<%else%>
	<%@messages.each do |message|%>
	  <%= render :partial=>"message",:locals=>{:message=>message} %>
	<%end%>
<%end%>